    <style>
        @media all and (max-width: 699px) {
            .paginate-big {
                display: none;
            }
            .paginate-small {
                padding: 20px 20px 50px 20px;
                display: block;
            }
            .navbar-brand>img {
                height: 90%;
                padding: 10px 0 0 15px;
                width: auto;
            }
            .grid-container {
                padding: 0px 20px 10px 20px;
            }
            .blog-outside-title {
                overflow: hidden;
                text-overflow: ellipsis;
                -webkit-line-clamp: 2;
                display: -webkit-box;
                -webkit-box-orient: vertical;
                font-family: Roboto;
                font-size: 22px;
                font-weight: bold;
                line-height: 28px;
                margin: 10px 0px;
            }
            .blog-short-desc {
                overflow: hidden;
                text-overflow: ellipsis;
                -webkit-line-clamp: 2;
                display: -webkit-box;
                -webkit-box-orient: vertical;
                color: #4C4C4C;
                font-family: "Source Serif Pro";
                font-size: 17px;
                line-height: 22px;
                margin: 7px 0px;
                height: 45px;
            }
            .grid-column {
                float: left;
                width: 100%;
                padding: 0px 10px 0px 10px;
                cursor: pointer;
            }
            .grid-column img {
                margin-top: 50px;
                border-radius: 5px;
            }
            .big-title {
                color: #000000;
                font-family: Quicksand;
                font-size: 35px;
                font-weight: bold;
                line-height: 30px;
                margin: 30px 0px -20px 10px;
            }
            .category-container {
                display: none;
            }
            .category-container-small {
                display: block;
                width: 100%;
                padding: 15px;
            }
            #blog-header {
                display: none;
            }
            #blog-header-small {
                display: block;
                padding: 20px 0px;
                overflow: auto;
            }
        }
        
        @media screen and (min-width: 700px) {
            .paginate-small {
                display: none;
            }
            .paginate-big {
                display: block;
            }
            .category-container {
                margin: 90px 0px 10px 0px;
                padding: 10px 130px 0px 126px;
                width: 100%;
                height: 80px;
            }
            .category-container-small {
                display: none;
            }
            #blog-header {
                display: block;
            }
            #blog-header-small {
                display: none;
            }
        }
        
        .blog-short-desc {
            margin: 0px 0px 15px 0px;
        }
        
        .blog-outside-title {
            margin: 10px 0px 5px 0px;
        }
        
        .more-pink-title {
            color: #EF2A67;
            font-family: Quicksand;
            font-size: 14px;
            font-weight: bold;
            line-height: 18px;
        }
    </style>
</head>

<body style="display:none">

    <%- include standard-header.ejs %>

        <div id="blog-header" class="box-shadow row" style="text-align: center;padding:12px 150px">

            <div class="col-md-2">
                <a id="all" class="black" target="_top" href="/blog"><b class="quick-weight-bold"> HOME</b> </a>
            </div>
            <div class="col-md-2 col-half-offset">
                <a id="technology" class="black" target="_top" href="/blog?type=technology"><b class="quick-weight-bold"> TECHNOLOGY</b> </a>
            </div>
            <div class="col-md-2 col-half-offset">
                <a id="heroes" class="black" target="_top" href="/blog?type=heroes"><b class="quick-weight-bold"> HEROES</b> </a>
            </div>
            <div class="col-md-2 col-half-offset">
                <a id="flutur-ngos" class="black" target="_top" href="/blog?type=flutur-ngos"><b class="quick-weight-bold"> FLUTUR &amp; NGOS</b> </a>
            </div>
            <div class="col-ms-2 col-half-offset">
                <a id="discover" class="black" target="_top" href="/blog?type=discover"><b class="quick-weight-bold"> DISCOVER</b> </a>
            </div>
        </div>


        <div id="blog-header-small" class="box-shadow">
            <div class="col-xs-2">
                <a id="all" class="black" target="_top" href="/blog"><b class="quick-weight-bold"> HOME</b> </a>
            </div>
            <div class="col-xs-2 col-half-offset">
                <a id="technology" class="black" target="_top" href="/blog?type=technology"><b class="quick-weight-bold"> TECHNOLOGY</b> </a>
            </div>
            <div class="col-xs-2 col-half-offset">
                <a id="heroes" class="black" target="_top" href="/blog?type=heroes"><b class="quick-weight-bold"> HEROES</b> </a>
            </div>
            <div class="col-xs-2 col-half-offset">
                <a id="flutur-ngos" class="black" target="_top" href="/blog?type=flutur-ngos"><b class="quick-weight-bold"> FLUTUR &amp; NGOS</b> </a>
            </div>
            <div class="col-xs-2 col-half-offset">
                <a id="discover" class="black" target="_top" href="/blog?type=discover"><b class="quick-weight-bold"> DISCOVER</b> </a>
            </div>
        </div>


        <div class="category-container">
            <div class="title-container" style="width:50%; float:left">
                <div class="big-title">
                    <% if (typeof category != 'undefined') { %>
                        <%- category.category_name %>
                            <% } else {%>
                                Blogs &amp; Stories
                                <% } %>
                </div>
            </div>
        </div>

        <div class="category-container-small">
            <div class="big-title">
                <% if (typeof category != 'undefined') { %>
                    <%- category.category_name %>
                        <% } else {%>
                            Blogs &amp; Stories
                            <% } %>
            </div>
        </div>


        <%- include all-blogs-container.ejs %>


            <div class="paginate-big row" style="padding:35px 30px 50px 30px;">
                <div class="col-md-1" style="text-align: right;">
                    <% if (currentPage > 0) { %>
                        <a id="prev-page" class="more-pink-title">
                            <i class="fa fa-angle-left" style="font-size:15px; margin-left:5px" aria-hidden="true"></i> Previous
                        </a>
                        <% } %>
                </div>
                <div class="col-md-10"></div>
                <div class="col-md-1">
                    <% if (!endOfPagination) { %>
                        <a id="next-page" class="more-pink-title">
                            Next <i class="fa fa-angle-right" style="font-size:15px; margin-left:5px" aria-hidden="true"></i>
                        </a>
                        <% } %>
                </div>
            </div>

            <div class="paginate-small" style="margin-bottom:15px">
                <div style="float:left;">
                    <% if (currentPage > 0) { %>
                        <a id="prev-page" class="black-quicksand-title">
                            <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                        </a>
                        <% } %>
                </div>
                <div style="float:right">
                    <% if (!endOfPagination) { %>
                        <a id="next-page" class="black-quicksand-title">
                            <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                        </a>
                        <% } %>
                </div>
            </div>


            <div class="resp-footer">
                <%- include footer_partial.ejs %>
            </div>
            <div class="small-resp-footer">
                <%- include footer_small_partial.ejs %>
            </div>

</body>

<script>
    $(document).ready(function() {
        $("body").fadeIn(800);

        var page = <%- currentPage %>;
        var category = "<%- currentCategoryId %>";
        $("#next-page").attr("href", "/blog?page=" + (page + 1) + "&type=" + category);
        $("#prev-page").attr("href", "/blog?page=" + (page - 1) + "&type=" + category);

        if (typeof category != 'undefined') {
            $('#' + category).addClass("pink");
            $('#' + category).removeClass("black");
        } else {
            $('#all').addClass("pink");
            $('#all').removeClass("black");
        }
    });
</script>

</html>