<script>
    $window = $(window);
    $window.scroll(function() {
        if (window.matchMedia('(min-width: 700px)').matches) {
            $scroll_position = $window.scrollTop();
            if ($scroll_position > 200) {
                $('.sticky-bar').fadeIn();
            } else {
                $('.sticky-bar').fadeOut();
            }
        }
    });
</script>

