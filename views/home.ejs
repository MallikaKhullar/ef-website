<script type="text/javascript">
    $(document).ready(function() {
        $(".footer-desc").show();
        $(".main-home-title").css("visibility", "visible").hide().fadeIn(50);
        $(".rangeslider-wrap").css("visibility", "visible").hide().fadeIn(50);

        if (window.matchMedia('(min-width: 700px)').matches) {
            $(".trans-box").fadeIn(50);
        } else {
            $(".small-trans-box").fadeIn(50);
        }

        changeImpactGrid();
        pullThemeFromDb();
    });

    $(document).ready(function() {
        var isshow = localStorage.getItem('isshow');
        if (isshow == null) {
            localStorage.setItem('isshow', 1);
            $('#welcomepopup').show();
        }
    });

    $("#popupX").click(function() {
        $('#welcomepopup').hide();
    });




    function pullThemeFromDb() {
        var color = $("#featured-title").css("color");
        $("#mission-txt").css("display", "block");
        if (color.includes("255")) {
            $("#featured-rect").css("border", "2px solid white");
            $("#featured-star").attr("src", "/image/white_star.png");
        } else {
            $("#featured-rect").css("border", "2px solid #3f3f3f");
            $("#featured-star").attr("src", "/image/black_star.png");
        }

        color = $("#featured-title-small").css("color");
        if (color.includes("255")) {
            $("#featured-rect-small").css("border", "2px solid white");
            $("#featured-star-small").attr("src", "/image/white_star.png");
        } else {
            $("#featured-rect-small").css("border", "2px solid #3f3f3f");
            $("#featured-star-small").attr("src", "/image/black_star.png");
        }
    }
    $("featured-title")
    $("#mission-prim").click(function() {
        window.location.href = 'projects/<%- featuredProject.projectId %>';
    });

    $("#desktop-footer-motivation").find("a").click(function(e) {
        e.preventDefault();
        var section = $(this).attr("href");
        $("html, body").animate({
            scrollTop: $(section).offset().top
        });
    });
    $("#small-footer-motivation").find("a").click(function(e) {
        e.preventDefault();
        var section = $(this).attr("href");
        $("html, body").animate({
            scrollTop: $(section).offset().top
        });
    });


    function submitEmail($val) {
        if ($val.val() == null || $val.val() == undefined || $val.val() == "")
            return;

        $.ajax({
            type: "GET",
            url: "/submit-email?email_id=" + $val.val(),
            success: function(result) {
                $(".email-input").css("display", "none");
                $(".email-submit").css("display", "block");
            },
            error: function(result) {}
        });
    }

    $('.email-label').click(function() {
        submitEmail($(".desktop-name"));
    });
    $('.small-email-label').click(function() {
        submitEmail($(".small-name"));
    });
    $('#feature-read-more').click(function() {
        window.location.href = "projects/" + "<%- featuredProject.projectId %>";
    });
</script>

