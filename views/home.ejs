<script type="text/javascript">
    $("#footer-motivation").find("a").click(function(e) {
        e.preventDefault();
        var section = $(this).attr("href");
        $("html, body").animate({
            scrollTop: $(section).offset().top
        });
    });


    $(document).ready(function() {
        changeImpactGrid();
    });

    $('label').click(function() {
        if ($("#name").val() == null || $("#name").val() == undefined || $("#name").val() == "")
            return;

        $.ajax({
            type: "GET",
            url: "/home/submit-email?email_id=" + document.getElementById("name").value,
            success: function(result) {
                $("#email-input").css("display", "none");
                $("#email-submit").css("display", "block");
            },
            error: function(result) {}
        });
    });
