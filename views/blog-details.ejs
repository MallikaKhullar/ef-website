<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="google-site-verification" content="bIgzhiYzJX-z_6EqT39MpkW7wN8J7zbpD_8puZbvKeM" />
    <link rel="icon" href="/image/header_logo.png" />

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <link href="//fonts.googleapis.com/css?family=Quicksand:300,400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Serif+Pro" rel="stylesheet">

    <link rel="stylesheet" href="/vendor/font-awesome/css/font-awesome.min.css">
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/new-age.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="/css/mobile-view.css">
    <link rel="stylesheet" href="/css/blog.css">

    <title>
        <%- details.blog_title %>
    </title>

    <style>
        .very-thin-roboto {
            color: #4C4C4C;
            font-family: Roboto;
            font-size: 12px;
            font-style: italic;
            font-weight: 300;
            line-height: 19px;
            width: 350px;
        }
    </style>
</head>

<body style="display:none">

    <nav id="mainNav" class="navbar" style="z-index:10; margin-bottom: 0px; margin-top:10px;">
        <div class="container" style="width:95%">
            <div class="navbar-header">
                <a class="navbar-brand page-scroll" href="/">
                    <img src="/image/flutur_logo_black.png">
                </a>
            </div>

            <div class="collapse navbar-collapse" style="padding-top: 15px;padding-right: 15px;">
                <ul class="nav navbar-right">
                    <li class="li-no-padding">
                        <a class="grey" target="_top" href="/blog">
                            <b class="quick-weight-bold"> BLOG</b>
                        </a>
                    </li>
                    <li class="li-no-padding">
                        <a class="black" target="_top" href="/faqs">
                            <b class="quick-weight-bold"> FAQs</b>
                        </a>
                    </li>
                    <li class="li-no-padding">
                        <a class="black" target="_top" href="/privacy">
                            <b class="quick-weight-bold"> PRIVACY</b>
                        </a>
                    </li>
                    <li class="li-no-padding">
                        <div class="btn-black" style="font-size:12px; cursor:pointer">
                            <a class="black" target="_top" href="https://chrome.google.com/webstore/detail/flutur-small-flutters-cau/onebagjpomhjadhoiianmnelkbcnllnf" style="padding: 20px; text-decoration:none!important; height:100%; width:100%">
                                <b class="quick-weight-bold-small"> CHROME PLUGIN</b>
                                <i class="fa fa-angle-right" style="font-size:15px; margin-left:5px" aria-hidden="true"></i>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div id="blog-header" class="box-shadow row" style="text-align: center;padding:12px 150px">

        <div class="col-md-2">
            <a id="all" class="black" target="_top" href="/blog"><b class="quick-weight-bold"> HOME</b> </a>
        </div>
        <div class="col-md-2 col-half-offset">
            <a id="tech_1" class="black" target="_top" href="/blog?type=tech_1"><b class="quick-weight-bold"> TECH</b> </a>
        </div>
        <div class="col-md-2 col-half-offset">
            <a id="news_1" class="black" target="_top" href="/blog?type=news_1"><b class="quick-weight-bold"> NEWS</b> </a>
        </div>
        <div class="col-md-2 col-half-offset">
            <a id="flu_1" class="black" target="_top" href="/blog?type=flu_1"><b class="quick-weight-bold"> FLUTUR</b> </a>
        </div>
        <div class="col-ms-2 col-half-offset">
            <a id="disc_1" class="black" target="_top" href="/blog?type=disc_1"><b class="quick-weight-bold"> DISCOVER</b> </a>
        </div>
    </div>

    <div style="width:80%; margin: 0 auto; padding: 50px 0px 10px 0px;">

        <div class="center-cropped">
            <img src=" <%- details.title_photo_url %>">
        </div>

        <div class="image-caption">
            <%- details.title_photo_caption %>
        </div>


        <div style="margin:30px 0px;height:100px;width:100%">
            <div style="float:left; width:40%">
                <%- include small_user_partial.ejs %>
            </div>
            <div style="float:right; width:60%">
                <div>
                    <%- include small_donate_partial.ejs %>
                </div>
            </div>
            <div class="btn-black" style="float:right;width:300px;font-size:12px; cursor:pointer">
                <a class="black facebook-share" target="_top">
                    <i class="fa fa-facebook" style="font-size:15px; margin-right:5px" aria-hidden="true"></i>
                    <b class="quick-weight-bold-small"> Share on Facebook</b>
                </a>
            </div>

        </div>


        <div class="black-quicksand-title" style="margin:30px 0px 0px 0px ">
            <%- details.blog_title %>
        </div>



        <div style="margin:20px 0px;">
            <% for(var i=0; i<details.paragraphs.length; i++) { %>
                <div class="para">
                    <% if (typeof details.paragraphs[i].paragraph_title != 'undefined') { %>
                        <div class="para-title">
                            <%- details.paragraphs[i].paragraph_title %>
                        </div>
                        <% } %>

                            <% if (typeof details.paragraphs[i].image_url != 'undefined') { %>
                                <img src="<%-details.paragraphs[i].image_url%>" style="width:50%">
                                <% if (typeof details.paragraphs[i].image_caption != 'undefined') { %>
                                    <div class="image-caption">
                                        <%- details.paragraphs[i].image_caption %>
                                    </div>
                                    <% } %>
                                        <% } %>
                                            <% if (typeof details.paragraphs[i].paragraph_text != 'undefined') { %>
                                                <div class="para-text">
                                                    <%- details.paragraphs[i].paragraph_text %>
                                                </div>
                                                <% } %>


                </div>
                <% } %>
        </div>

        <div class="black-quicksand-big-title" style="margin-bottom:-5px">Recent Blogs:</div>
        <div>
            <div class="grid-row">
                <% for(var i=0; i<recent.length; i++) { %>
                    <div class="grid-column">
                        <a href="/blog/<%-recent[i].blog_id%>">
                            <img src="<%-recent[i].title_photo_url%>" style="width:100%">
                            <div class="blog-outside-title black">
                                <%- recent[i].blog_title%>
                            </div>
                            <div class="blog-short-desc">
                                <%- recent[i].blog_short_desc%>
                            </div>
                        </a>
                    </div>
                    <% } %>
            </div>
        </div>


        <div class="black-quicksand-big-title" style="margin-bottom:-5px">Similar Blogs:</div>
        <div>
            <div class="grid-row">
                <% for(var i=0; i<similar.length; i++) { %>
                    <div class="grid-column">
                        <a href="/blog/<%-similar[i].blog_id%>">
                                <img src="<%-similar[i].title_photo_url%>" style="width:100%">
                                <div class="blog-outside-title black">
                                    <%- similar[i].blog_title%>
                                </div>
                                <div class="blog-short-desc">
                                    <%- similar[i].blog_short_desc%>
                                </div>
                            </a>
                    </div>
                    <% } %>
            </div>
        </div>

    </div>



    <div class="resp-footer ">
        <%- include footer_partial.ejs %>
    </div>
    <div class="small-resp-footer ">
        <%- include footer_small_partial.ejs %>
    </div>
</body>

<script>
    $(document).ready(function() {
        $("body ").fadeIn(800);
        var category = "<%- details.category_id %>";
        if (typeof category != 'undefined') {
            $('#' + category).addClass("grey");
            $('#' + category).removeClass("black");
        } else {
            $('#all').addClass("grey");
            $('#all').removeClass("black");
        }
        $(".facebook-share").attr("href", "http://www.facebook.com/sharer.php?u=" + window.location.href);

    });
</script>

</html>