    $(".app-bar-cross").click(function(e) {
        $(".middle-below-app").css('position', 'absolute');
        $(".middle-below-app").css('left', '100%');
        $(".middle-below-app").css('width', '0px');
        $(".middle-below-app").css('height', '0px');
        $(".middle-below-app").css('top', '-10%');
        $(".middle-below-app").css('opacity', '0.0');
        hideAppBar();
        setTimeout(function() {
            $("#hamburger-icon").addClass("pulse");
            setTimeout(function() {
                $("#hamburger-icon").removeClass("pulse")
            }, 100);
        }, 400);

    });
