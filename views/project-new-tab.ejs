<script type="text/javascript">
    if (adblock == true) {
        $(".ad-block-bar").show();
    } else {
        $(".ad-block-bar").hide();
    }

    $(document).ready(function() {
        window.theme = "<%- user.color_theme %>";
        setupThemeUI();
        setupWidgets();
    });


    function showSnackbar() {
        var x = document.getElementById("snackbar");
        x.className = "show";
        setTimeout(function() {
            x.className = x.className.replace("show", "");
        }, 1000);
    }

    $("#tell-friends").click(function() {
        $(".copy-link-box").css("display", "block");
    });

    $(".dark-gradient-donate").click(function() {
        reload();
    });
    $("#cross-icon").click(function() {
        reload();
    });

    function reload() {
        window.location.reload(true);
    }

    $("#choose-now").click(function() {
        window.location.href = '/new-tab/choose-project';
    });

    $("#choose-mission").click(function(e) {
        window.location.href = '/new-tab/choose-project';
        e.stopPropagation();
    });

    $("#grad-input").click(function() {
        window.theme = "gradient";
        setTheme();
    });
    $("#white-input").click(function() {
        window.theme = "white";
        setTheme();
    });
    $("#unsplash-input").click(function() {
        window.theme = "unsplash";
        setTheme();
    });

    function startMission() {
        window.location.href = "/new-tab";
    }


    function setupWidgets() {
        if ("<%- user.ui_settings.app_bar %>" == "true") {
            $(".middle-below-app").css('visibility', 'visible');
        } else {
            $(".middle-below-app").css('visibility', 'hidden');
        }

        if ("<%- user.ui_settings.search_visible %>" == "true") {
            $("#middle-below").css('visibility', 'visible');
        } else {
            $("#middle-below").css('visibility', 'hidden');
        }
    }


    function setupThemeUI() {
        switch (window.theme) {
            case "white":
                $(".hey-sexy").css("text-shadow", "0px 0px");
                $("#myBar").css("background-color", "#00F79F");
                $("#background-image-white").hide();
                $("#background-image-overlay").hide();
                $("#background-image").show();
                $("#background-image").css("background", "white");
                $(".hey-sexy").css("color", "#5e5e5e");
                $("#hamburger-icon").attr("src", "/image/right_nav_black.png");
                $("#logo-icon").attr("src", "/image/flutur_logo_black.png");
                $("#app-icon").attr("src", "/image/all_apps_purple.png");
                $("#theme-icon").attr("src", "/image/theme_change_black.png");
                document.getElementById("autocomplete").classList.add("formWhite");
                $("#autocomplete").css("border", "1px solid rgba(152,152,152,0.66)");
                $("#autocomplete").css("background-color", "rgba(255,255,255,0.55)");
                $("#autocomplete").css("color", "#5e5e5e");
                $("#autocomplete").css("border-radius", "5px");
                $("#logo-icon").attr("src", "/image/flutur_logo_black.png");
                $(".display-number-title").css("color", "black");
                $(".page-text").css("color", "black");
                $(".display-number").css("color", "black");
                $("#myProgress").css("background-color", "rgba(1, 1, 1, 0.13)");
                $("#grad-input").removeClass('borderClass');
                $("#white-input").addClass('borderClass');
                $("#unsplash-input").removeClass('borderClass');
                $(".font-xs").removeClass("white");
                $(".font-xs").addClass("black");
                break;

            case "unsplash":
            default:
                $(".hey-sexy").css("text-shadow", "3px 3px 5px #00000088");

                $(".hey-sexy").css("color", "white");
                $("#background-image-white").show();
                $(".page-text").css("color", "white");
                setTimeout(function() {
                    $("#background-image-overlay").fadeIn(800);
                }, 600);
                $("#background-image").show();
                $("#background-image").bind("load", function() {
                    $(this).fadeIn();
                });

                $("#background-image").css("background", "");
                $("#background-image").css("background-image", "url('<%- dailyImage %>')");
                $("#hamburger-icon").attr("src", "/image/right_nav_white.png");
                $("#app-icon").attr("src", "/image/all_apps.png");
                $("#theme-icon").attr("src", "/image/theme_change.png");
                $("#logo-icon").attr("src", "/image/flutur_logo_white.png");
                $("#autocomplete").css("background-color", "rgba(0, 0, 0, 0.55)");
                $("#autocomplete").css("color", "white");
                $("#autocomplete").css("border", "0px solid rgba(152,152,152,0.66)");
                $("#myProgress").css("background-color", "rgba(255,255,255, 0.17)");
                $("#myBar").css("background-color", "#38FFFC");
                document.getElementById("autocomplete").classList.remove("formWhite");
                $(".display-number-title").css("color", "white");
                $(".display-number").css("color", "white");
                $("#grad-input").removeClass('borderClass');
                $("#white-input").removeClass('borderClass');
                $("#unsplash-input").addClass('borderClass');
                $(".font-xs").removeClass("black");
                $(".font-xs").addClass("white");
                break;

            case "gradient":
                $(".hey-sexy").css("text-shadow", "0px 0px");
                $(".hey-sexy").css("color", "white");
                $("#background-image-white").hide();
                $("#myBar").css("background-color", "#38FFFC");
                $(".page-text").css("color", "white");
                $("#background-image-overlay").hide();
                $("#background-image").hide();
                $("#hamburger-icon").attr("src", "/image/right_nav_white.png");
                $("#app-icon").attr("src", "/image/all_apps.png");
                $("#theme-icon").attr("src", "/image/theme_change.png");
                $("#logo-icon").attr("src", "/image/flutur_logo_white.png");
                $("#myProgress").css("background-color", "rgba(1, 1, 1, 0.13)");
                $("#autocomplete").css("border", "0px solid rgba(152,152,152,0.6)");
                $("#autocomplete").css("color", "white");
                $("#autocomplete").css("background-color", "rgba(0, 0, 0, 0.07)");
                document.getElementById("autocomplete").classList.remove("formWhite");
                $(".display-number-title").css("color", "white");
                $(".display-number").css("color", "white");
                $("#grad-input").addClass('borderClass');
                $("#white-input").removeClass('borderClass');
                $("#unsplash-input").removeClass('borderClass');
                $(".font-xs").removeClass("black");
                $(".font-xs").addClass("white");
                break;
        }
    }

    function copyToClipboard(text) {
        var $temp = $("<input>");
        $("body").append($temp);
        $temp.val(text).select();
        document.execCommand("copy");
        $temp.remove();
        $(".copy-link-box").css("display", "none");
        showSnackbar();
    }

    function hideSearch() {
        $.ajax({
            type: "GET",
            url: "/new-tab/mask-search",
            error: function(result) {}
        });
    }

    function hideAppBar() {
        $.ajax({
            type: "GET",
            url: "/new-tab/mask-apps",
            error: function(result) {}
        });
    }

    function showSearch() {
        $.ajax({
            type: "GET",
            url: "/new-tab/unmask-search",
            error: function(result) {}
        });
    }

    function showAppBar() {
        $.ajax({
            type: "GET",
            url: "/new-tab/unmask-apps",
            error: function(result) {}
        });
    }

    function toggleTheme() {
        $.ajax({
            type: "GET",
            url: "/new-tab/theme-toggle?currentTheme=" + window.theme,
            success: function(result) {
                window.theme = result;
                window.location.reload(true);
            },
            error: function(result) {}
        });
    }

    function setTheme() {
        $.ajax({
            type: "GET",
            url: "/new-tab/theme-change?selectedTheme=" + window.theme,
            success: function(result) {
                window.location.reload(true);
            },
            error: function(result) {

            }
        });
    }

    function openAppsDrawer() {
        $("#apps-container-overlay").toggle();
    }

    function dismissApps() {
        $("#apps-container-overlay").hide();
        $("#drawer-container-overlay").hide();
    }

    function dismissDrawer() {
        $("#drawer-container-overlay").hide();
    }

    function openRightNav() {
        $("#drawer-container-overlay").toggle();
    }

    function showBigDonateBox() {
        $(".ad-footer-right-big-button-box").show();
        $(".ad-footer-right-button-box").hide();
    }

    function hideBigDonateBox() {
        $(".ad-footer-right-big-button-box").hide();
        $(".ad-footer-right-button-box").show();
    }

    function showBigMissionBox() {
        $(".ad-footer-right-big-mission-box").show();
        $(".ad-footer-right-mission-box").hide();
    }

    function hideBigMissionBox() {
        $(".ad-footer-right-big-mission-box").hide();
        $(".ad-footer-right-mission-box").show();
    }

    $(".copy-link-box").click(function() {
        copyToClipboard("www.flutur.org");
    });

    $(document).click(function(event) {
        if (!$(event.target).hasClass('copy-link-box') && !$(event.target).hasClass('tell-friends')) {
            $(".copy-link-box").css("display", "none");
        }
    });

    $(".right-drawer").click(function(e) {
        e.stopPropagation();
    })

    $(".search-cross").click(function(e) {
        $("#middle-below").css('position', 'absolute');
        $("#middle-below").css('left', '100%');
        $("#middle-below").css('width', '0px');
        $("#middle-below").css('height', '0px');
        $("#middle-below").css('top', '-10%');
        $("#middle-below").css('opacity', '0.0');
        hideSearch();
        setTimeout(function() {
            $("#hamburger-icon").addClass("pulse");
            setTimeout(function() {
                $("#hamburger-icon").removeClass("pulse")
            }, 100);
        }, 400);

