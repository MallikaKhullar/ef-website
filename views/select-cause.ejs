<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Flutur | Select Donation Mission | DonateWithoutDonating </title>
    <link rel="icon" href="image/header_logo.png" />

    <!-- css -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Quicksand:400,700" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,700" rel="stylesheet">

    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/mission-select.css">


    <!-- js -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="js/jquery-1.4.2.min.js"></script>


    <%- include partial-head.ejs %>

</head>

<body>
    <div id="bgoverlay">
        <img src='<%- dailyImage %>' id="bg" />

        <div class="choose-title mb-3 pt-5">Choose your mission!</div>

        <div class="large-dialog-overlay mb-5" style="<%- featuredProject.cardStyle %>">
            <a href='/new-tab/project-selected?cause_id=<%-featuredProject.projectId%>' style="color:inherit">
                <div class="row">
                    <div class="col-sm-3" style="padding:0px">
                        <img alt="Flutur Chrome Extension" style="padding-top:0px; margin-top:-30px" src="<%- featuredProject.primaryMissionPhoto %>" class="img-responsive" /></div>
                    <div class="col-sm-5 pt-40">
                        <div class="open-new-tabs-to" style="line-height:1.5; margin-top:80px; letter-spacing: 0.5px;text-align:left;padding-right:50px;">Open new tabs to</div>
                        <div class="big-action-title uc">
                            <%- featuredProject.featureActionTitle %>
                        </div>
                        <div class="open-new-tabs-to" style="line-height:1.5; margin:10px 0px; letter-spacing: 0.5px;text-align:left;padding-right:50px;">
                            <%- featuredProject.forByLine %>
                        </div>


                        <div id="feature-box" class="featured-green">
                            <div style="position: relative;float:left; width:20%">
                                <img id="star-icon" src="/image/black_star.png" style="height:23px; margin-left:8px;margin-top:-2px" />
                            </div>
                            <div style="position: relative;float:left; width:80%">
                                <div class="poppins-thick xs-text uc">Featured Mission</div>
                            </div>
                        </div>


                    </div>
                    <div class="col-sm-4 pt-40">
                        <div class="units-big">
                            <img src="<%- featuredProject.unitIcon %>" style="height:17px;width:17x; margin-right:5px;margin-top:-4px">
                            <%- unitString %> funded!
                        </div>
                        <div class="action-desc-left primary-text" style="margin-top:43px">
                            <%- featuredProject.shortDescription %>
                        </div>

                        <div class="choose-mission-featured bold uc choose-box" style="margin-top:30px;line-height:1.5; letter-spacing: 0.5px;">Choose mission </div>
                    </div>
                </div>
            </a>

        </div>

        <div class="or-select-from-these">. . .<br>Or select from these awesome missions!
        </div>

        <div class="mb-5">
            <a href="#mission" id="click">
                <img src="/image/down_white.png" style="width:30px; height:15px">
            </a>
        </div>


        <div id="mission" class="mw-80 mb-7 mt-5">
            <% for(var i=0; i<projects.length; i++) { %>
                <div class="mission-li secondary-mission" id="<%-projects[i].projectId%>" style="<%-projects[i].cardStyle%>">
                    <div class="whole-box" id="whole-<%-projects[i].projectId%>">
                        <div class="mission-img-container"><img alt="Flutur Environment Saving" class="mission-img" src="<%- projects[i].secondaryMissionPhoto %>" />
                        </div>

                        <div class="open-new-tabs-to-thin">Open new tabs to</div>

                        <div class="action-title">
                            <%- projects[i].actionTitle %>
                        </div>

                        <div class="thin">
                            <%- projects[i].forByLine %>
                        </div>

                        <div class="mb-3 action-desc">
                            <%- projects[i].shortDescription %>
                        </div>

                        <div class="small-units">
                            <!-- <img src="<%- projects[i].unitIcon %>" style="height:17px;width:17x; margin-right:5px;"> By -->
                            <span style="font-weight:500">With </span>
                            <%- projects[i].ngo.ngoName %>
                        </div>
                        <div class="choose-box-secondary-rect" id="choose-<%-projects[i].projectId%>">
                            Choose this mission
                        </div>

                    </div>
                </div>
                <% } %>
        </div>
        <!-- </div>
    </div> -->


    </div>
</body>
<script src="js/jquery.js"></script>
<script src="js/jquery-ui.js"></script>
<script type="text/javascript">
    var $li = $('.hor-list li').click(function() {
        $("#link").attr("href", "/new-tab/project-selected?cause_id=" + $(this).attr("id"));
    });

    $(document).ready(function() {

        var color = $('.big-action-title').css("color");
        $(".choose-box").css({
            "border-color": color,
            "border-width": "1px",
            "border-style": "solid"
        });
        $("#feature-box").css({
            "border": "1px solid " + color
        });
        $("#feature-box").css({
            "color": color
        });
        if (color.includes(255)) color = "white";
        else color = "black";
        $("#star-icon").attr("src", "/image/" + color + "_star.png");


        $(".choose-box-secondary-rect").click(function() {
            var id = $(this).attr('id');
            window.location.href = '/new-tab/project-selected?cause_id=' + id.replace("choose-", "");
        });
        $(".whole-box").click(function() {
            var id = $(this).attr('id');
            window.location.href = '/new-tab/project-selected?cause_id=' + id.replace("whole-", "");
        });

        $("#click").click(function(e) {
            e.preventDefault();
            var section = $(this).attr("href");
            $("html, body").animate({
                scrollTop: $(section).offset().top
            });
        });
    });
</script>

</html>